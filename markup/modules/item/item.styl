.item
	position relative
	display block
	min-width 50px
	min-height 50px
	overflow hidden
	background-size 100% 100%
	background-repeat no-repeat
	background-position center
	transition background-size .2s ease-in-out
	img
		display none
		width 100%
		height 100%
	&:hover
		background-size 110% 110%
.item-title
	position absolute
	z-index 2
	bottom 1.7em
	left 1.7em
	margin 0
	padding 0
	font-weight 300
	font-size .8em
	text-transform uppercase
	color #fff
	letter-spacing .1em