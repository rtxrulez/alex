.itemList
	display flex
	flex-flow row wrap
	justify-content center
	align-items stretch
	align-content stretch
.item
	width 18em
	height 18em
	flex 1 1 33.333%
	transition height .2s ease
@media (min-width: 1420px)
	.item
		width 20em
		height 20em
		flex-basis 25%

@media (max-width: 1024px)
	.item
		flex-basis 50%

@media (max-width: 700px)
	.item
		height 18em
		
@media (max-width: 580px)
	.item
		height 16em
		
@media (max-width: 450px)
	.item
		flex-basis 100%
		height 18em
		